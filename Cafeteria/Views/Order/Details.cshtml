@model Cafeteria.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order number @Model.Id</h4>
    <p>Order placed on @Model.OrderDate</p>
    <hr />
    
    <h4>Order Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Category</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("F2")</td>
                    <td>@(item.Quantity * item.Price).ToString("F2")</td>
                    <td>@(item.Quantity * item.Product.Price).ToString("C")</td>

                </tr>
            }
        </tbody>
    </table>
    
    <h5>Total Price</h5>
    <p>@Model.TotalPrice.ToString("F2")</p>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
